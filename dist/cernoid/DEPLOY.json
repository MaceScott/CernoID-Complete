{
  "setup": [
    "1. Install Docker and Docker Compose",
    "2. Copy .env.example to .env and update settings",
    "3. Run 'docker-compose up -d' to start services",
    "4. Access the application at http://localhost:8000"
  ],
  "requirements": {
    "docker": "20.10+",
    "docker-compose": "1.29+",
    "ports_needed": [
      8000,
      5432
    ],
    "minimum_specs": {
      "ram": "4GB",
      "cpu": "2 cores",
      "storage": "10GB"
    }
  },
  "environment_variables": [
    "DB_HOST",
    "DB_USER",
    "DB_PASSWORD",
    "DB_NAME",
    "JWT_SECRET"
  ]
}