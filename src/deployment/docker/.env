# Docker environment configuration
COMPOSE_PROJECT_NAME=cernoid

# System paths
BASE_PATH=/opt/cernoid
DATA_PATH=/opt/cernoid/data
MODEL_PATH=/opt/cernoid/models
LOG_PATH=/opt/cernoid/logs

# Component versions
RECOGNITION_VERSION=latest
CAMERA_VERSION=latest
API_VERSION=latest
DASHBOARD_VERSION=latest

# Service ports
RECOGNITION_PORT=8000
CAMERA_PORT=8001
API_PORT=8002
DASHBOARD_PORT=8003

# GPU configuration
CUDA_VISIBLE_DEVICES=0

# System configuration
MAX_CAMERAS=16
FRAME_BUFFER_SIZE=30
DETECTION_THRESHOLD=0.8
MATCHING_THRESHOLD=0.6

# Security
JWT_SECRET=your-secret-key
TOKEN_EXPIRY=3600

# Monitoring
MONITOR_INTERVAL=5
MAX_ALERTS=100 